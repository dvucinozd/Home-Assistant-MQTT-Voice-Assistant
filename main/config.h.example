#ifndef CONFIG_H
#define CONFIG_H

/* ============================================================================
 * WiFi Configuration
 * ============================================================================ */
#define WIFI_SSID "YourNetworkName"
#define WIFI_PASSWORD "YourPassword"
#define WIFI_MAX_RETRY 5

/* ============================================================================
 * Home Assistant Configuration
 * ============================================================================ */
#define HA_HOSTNAME "homeassistant.local"  // mDNS hostname or IP address
#define HA_HOST "homeassistant.local"
#define HA_PORT 8123                       // Default HA port
#define HA_TOKEN "your_long_lived_access_token_here"
#define HA_USE_SSL false                   // Set true if using HTTPS
#define HA_WEBSOCKET_PATH "/api/websocket"

/* ============================================================================
 * Audio Configuration (ES8311 Codec)
 * ============================================================================ */
// I2S Pins
#define I2S_MCLK_PIN    GPIO_NUM_14
#define I2S_BCLK_PIN    GPIO_NUM_12
#define I2S_LRCLK_PIN   GPIO_NUM_13
#define I2S_DIN_PIN     GPIO_NUM_10  // Microphone input
#define I2S_DOUT_PIN    GPIO_NUM_9   // Speaker output

// I2C Pins (ES8311 Control)
#define I2C_SDA_PIN     GPIO_NUM_7
#define I2C_SCL_PIN     GPIO_NUM_8
#define I2C_FREQ_HZ     100000

// Power Amplifier
#define PA_ENABLE_PIN   GPIO_NUM_11

// Audio Settings
#define AUDIO_SAMPLE_RATE       16000  // Hz (16kHz for voice)
#define AUDIO_BITS_PER_SAMPLE   16     // bits
#define AUDIO_CHANNELS          1      // Mono
#define AUDIO_BUFFER_SIZE       1024   // samples

/* ============================================================================
 * ESP32-Hosted (WiFi via ESP32-C6)
 * ============================================================================ */
#define SDIO_D0_PIN     GPIO_NUM_39
#define SDIO_D1_PIN     GPIO_NUM_40
#define SDIO_D2_PIN     GPIO_NUM_41
#define SDIO_D3_PIN     GPIO_NUM_42
#define SDIO_CMD_PIN    GPIO_NUM_44
#define SDIO_CLK_PIN    GPIO_NUM_43
#define C6_RESET_PIN    GPIO_NUM_54  // Optional

/* ============================================================================
 * Voice Assistant Configuration
 * ============================================================================ */
// Wake Word Detection (TODO: Not yet implemented)
#define WAKE_WORD_ENABLED       false
#define WAKE_WORD_THRESHOLD     0.85f
#define WAKE_WORD_TIMEOUT_MS    5000

// Voice Activity Detection (TODO: Not yet implemented)
#define VAD_ENABLED             false
#define VAD_THRESHOLD           500
#define VAD_SILENCE_MS          1500

// Audio Processing (TODO: Not yet implemented)
#define ENABLE_AEC              false   // Acoustic Echo Cancellation
#define ENABLE_NS               false   // Noise Suppression
#define ENABLE_AGC              false   // Automatic Gain Control

// Recording
#define MAX_RECORDING_TIME_MS   10000   // Maximum voice command duration

/* ============================================================================
 * LED Indicators (Optional - Not yet implemented)
 * ============================================================================ */
#define LED_LISTENING_PIN   GPIO_NUM_15
#define LED_PROCESSING_PIN  GPIO_NUM_16
#define LED_ERROR_PIN       GPIO_NUM_17

/* ============================================================================
 * System Configuration
 * ============================================================================ */
#define DEVICE_NAME         "ESP32-P4 Voice Assistant"
#define FIRMWARE_VERSION    "1.0.0"

// FreeRTOS Task Priorities
#define AUDIO_TASK_PRIORITY         5
#define WIFI_TASK_PRIORITY          4
#define VA_TASK_PRIORITY            6
#define LED_TASK_PRIORITY           2

// Stack Sizes
#define AUDIO_TASK_STACK_SIZE       8192
#define WIFI_TASK_STACK_SIZE        4096
#define VA_TASK_STACK_SIZE          8192

/* ============================================================================
 * Debug Configuration
 * ============================================================================ */
#define DEBUG_AUDIO             1    // Enable audio debug logs
#define DEBUG_WIFI              1    // Enable WiFi debug logs
#define DEBUG_VA                1    // Enable voice assistant debug logs

#endif // CONFIG_H
